{
  "name": "vite-node-dev",
  "version": "0.1.0",
  "description": "Run Node scripts with vite-node and reload them when they are changed.",
  "type": "module",
  "packageManager": "pnpm@7.0.0",
  "bin": {
    "vite-node-dev": "./dist/index.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "tsc",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "test": "vitest --run",
    "test:dev": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugo-t-b/vite-node-dev.git"
  },
  "keywords": [
    "vite",
    "cli",
    "development",
    "monitor",
    "restart",
    "reload"
  ],
  "author": "Hugo Brosnahan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugo-t-b/vite-node-dev/issues"
  },
  "homepage": "https://github.com/hugo-t-b/vite-node-dev#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "c8": "^7.11.2",
    "eslint": "^8.15.0",
    "husky": "^7.0.4",
    "typescript": "^4.6.4",
    "vitest": "^0.12.0"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "vite": "^2.9.8",
    "vite-node": "^0.12.0"
  }
}
