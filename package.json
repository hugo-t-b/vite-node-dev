{
  "name": "vite-node-dev",
  "version": "0.2.1",
  "description": "Run Node scripts with vite-node and reload them when they are changed.",
  "type": "module",
  "packageManager": "pnpm@7.1.2",
  "bin": {
    "vite-node-dev": "./dist/index.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "tsc",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:dev": "vitest --watch",
    "typecheck": "tsc --noEmit && tsc --project ./tests/tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugo-t-b/vite-node-dev.git"
  },
  "keywords": [
    "vite",
    "cli",
    "development",
    "monitor",
    "restart",
    "reload"
  ],
  "author": "Hugo Brosnahan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugo-t-b/vite-node-dev/issues"
  },
  "homepage": "https://github.com/hugo-t-b/vite-node-dev#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@hugo-t-b/eslint-config": "^1.1.3",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "c8": "^7.11.3",
    "eslint": "^8.16.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "typescript": "^4.7.2",
    "vitest": "^0.12.9"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "vite": "^2.9.9",
    "vite-node": "^0.12.9"
  }
}
