{
  "name": "vite-node-dev",
  "version": "0.0.2",
  "description": "Run Node scripts with vite-node and reload them when they are changed.",
  "type": "module",
  "bin": {
    "vite-node-dev": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "test": "vitest --run",
    "test:dev": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugo-t-b/vite-node-dev.git"
  },
  "keywords": [
    "vite",
    "cli",
    "development",
    "monitor",
    "restart",
    "reload"
  ],
  "author": "Hugo Brosnahan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugo-t-b/vite-node-dev/issues"
  },
  "homepage": "https://github.com/hugo-t-b/vite-node-dev#readme",
  "devDependencies": {
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "c8": "^7.11.2",
    "eslint": "^8.14.0",
    "typescript": "^4.6.3",
    "vitest": "^0.9.4"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "vite": "^2.9.5",
    "vite-node": "^0.9.4"
  }
}
